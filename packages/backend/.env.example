# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# API Keys for LLM Providers
ANTHROPIC_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# LLM Provider Configuration
DEFAULT_LLM_PROVIDER=claude  # 'claude' or 'gpt'
LLM_MAX_TOKENS=1024
LLM_TEMPERATURE=0.2

# Sui Node Configuration
SUI_RPC_URL=https://fullnode.mainnet.sui.io

# Redis Configuration
REDIS_ENABLED=false  # Set to 'true' to enable Redis, 'false' to use in-memory cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL=3600  # Cache TTL in seconds (1 hour)

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdapp.com 